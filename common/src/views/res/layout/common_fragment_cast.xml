<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cast_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        tools:listitem="@layout/common_cast_item"
        tools:text="33 People"
        app:layout_constraintTop_toBottomOf="@id/cast_title"/>

    <com.vlv.imperiya.ui.warning.SmallWarningView
        android:id="@+id/warning_view_cast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:small_warning_title="@string/common_error_cast_title"
        app:small_warning_body="@string/common_error_description"
        app:small_warning_button_try_again="@string/common_error_button"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_cast"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                style="@style/Imperiya.Widget.Shimmer.Item.Rounded"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"/>

            <View
                style="@style/Imperiya.Widget.Shimmer.Item.Rounded"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"/>

            <View
                style="@style/Imperiya.Widget.Shimmer.Item.Rounded"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"/>

            <View
                style="@style/Imperiya.Widget.Shimmer.Item.Rounded"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"/>

            <View
                style="@style/Imperiya.Widget.Shimmer.Item.Rounded"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"/>

            <View
                style="@style/Imperiya.Widget.Shimmer.Item.Rounded"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.facebook.shimmer.ShimmerFrameLayout>

</FrameLayout>