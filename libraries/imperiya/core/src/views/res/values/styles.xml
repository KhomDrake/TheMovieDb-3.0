<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Imperiya.Widget"/>

    <style name="Imperiya.Widget.Shimmer">
        <item name="shimmer_auto_start">true</item>
        <item name="shimmer_base_color">@color/imperiya_color_start_shimmer</item>
        <item name="shimmer_highlight_color">@color/color_imperiya_primary</item>
    </style>

    <style name="Imperiya.Widget.Shimmer.Item">
        <item name="android:background">@drawable/imperiya_background_shimmer</item>
    </style>

    <style name="Imperiya.Widget.Shimmer.Item.Rounded">
        <item name="android:background">@drawable/imperiya_background_shimmer_rounded</item>
    </style>

    <style name="Imperiya.Widget.Shimmer.Item.Oval">
        <item name="android:background">@drawable/imperiya_background_shimmer_oval</item>
    </style>

    <style name="Imperiya.Widget.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabTextColor">@color/color_imperiya_on_background</item>
        <item name="tabSelectedTextColor">@color/imperiya_color_link</item>
        <item name="tabIndicatorColor">@color/imperiya_color_link</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabTextAppearance">@style/Imperiya.Style.Text.Title</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="Imperiya.Widget.PageIndicator">
        <item name="spi_dotSize">10dp</item>
        <item name="spi_dotSelectedSize">10dp</item>
        <item name="spi_dotColor">@color/color_imperiya_outline</item>
        <item name="spi_dotSelectedColor">@color/color_imperiya_on_background</item>
    </style>

    <style name="Imperiya.Widget.Toolbar">
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="titleTextColor">@color/color_imperiya_on_background</item>
    </style>

    <style name="Imperiya.Widget.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/imperiya_button_background_tertiary</item>
        <item name="background">@drawable/imperiya_button_background_tertiary</item>
        <item name="android:foreground">@drawable/imperiya_ripple_rounded</item>
        <item name="android:textColor">@color/color_imperiya_on_tertiary</item>
    </style>

    <style name="Imperiya.Widget.Button.Neutral">
        <item name="android:background">@drawable/imperiya_button_background_neutral</item>
        <item name="background">@drawable/imperiya_button_background_neutral</item>
        <item name="android:textColor">@color/imperiya_color_primary</item>
    </style>

    <style name="Imperiya.Widget.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/imperiya_chip_background_color</item>
        <item name="android:textColor">@color/imperiya_chip_text_color</item>
        <item name="chipStrokeColor">@color/imperiya_chip_stroke_color</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipCornerRadius">12dp</item>
        <item name="checkedIconEnabled">false</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:outlineProvider">background</item>
    </style>

    <style name="Imperiya.Style.SearchView">
        <item name="android:background">@drawable/imperiya_background_search</item>
        <item name="searchIcon">@drawable/ic_search_view</item>
        <item name="searchHintIcon">@drawable/ic_search_view</item>
        <item name="goIcon">@drawable/ic_search_view</item>
    </style>

    <style name="Imperiya.ActionSheet"/>

    <style name="Imperiya.ActionSheet.Rounded" parent="Theme.Design.BottomSheetDialog">>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/Imperiya.ActionSheet.BottomSheetRounded</item>
    </style>

    <style name="Imperiya.ActionSheet.BottomSheetRounded" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/imperiya_rounded_background_bottom_sheet</item>
    </style>

    <style name="Imperiya.ActionSheet.Animation">
        <item name="android:windowEnterAnimation">@anim/imperiya_bottom_sheet_anim_in</item>
        <item name="android:windowExitAnimation">@anim/imperiya_bottom_sheet_anim_out</item>
    </style>

</resources>