<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Imperiya"/>

    <style name="Imperiya.Theme" parent="Theme.Material3.DynamicColors.Light">
        <item name="colorPrimary">@color/color_imperiya_light_primary</item>
        <item name="colorOnPrimary">@color/color_imperiya_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/color_imperiya_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/color_imperiya_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/color_imperiya_light_secondary</item>
        <item name="colorOnSecondary">@color/color_imperiya_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/color_imperiya_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/color_imperiya_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/color_imperiya_light_tertiary</item>
        <item name="colorOnTertiary">@color/color_imperiya_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/color_imperiya_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/color_imperiya_light_onTertiaryContainer</item>
        <item name="colorError">@color/color_imperiya_light_error</item>
        <item name="colorErrorContainer">@color/color_imperiya_light_errorContainer</item>
        <item name="colorOnError">@color/color_imperiya_light_onError</item>
        <item name="colorOnErrorContainer">@color/color_imperiya_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/color_imperiya_light_background</item>
        <item name="colorOnBackground">@color/color_imperiya_light_onBackground</item>
        <item name="colorSurface">@color/color_imperiya_light_surface</item>
        <item name="colorOnSurface">@color/color_imperiya_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/color_imperiya_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/color_imperiya_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/color_imperiya_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/color_imperiya_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/color_imperiya_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/color_imperiya_light_inversePrimary</item>
        <item name="android:statusBarColor">@color/color_imperiya_light_background</item>
        <item name="android:windowBackground">@color/color_imperiya_light_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Imperiya.Theme.BottomNavigation" parent="Imperiya.Theme">
        <item name="colorSecondaryContainer">@color/color_imperiya_tertiary_container</item>
    </style>

    <style name="Imperiya.Theme.Collapse" parent="Imperiya.Theme">
        <item name="colorPrimary">@color/color_imperiya_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Imperiya.Theme.CollapseToolbar" parent="Imperiya.Theme">
        <item name="android:statusBarColor">@color/color_imperiya_primary</item>
    </style>

    <style name="Imperiya.Style"/>

    <style name="Imperiya.Style.BottomNavigation">
        <item name="itemIconTint">@color/color_imperiya_on_tertiary_container</item>
        <item name="itemTextColor">@color/color_imperiya_on_secondary_container</item>
        <item name="backgroundTint">@color/color_imperiya_secondary_container</item>
        <item name="itemBackground">@color/color_imperiya_tertiary_container</item>
    </style>
</resources>