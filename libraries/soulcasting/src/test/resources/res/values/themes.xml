<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Imperiya"/>

    <style name="Imperiya.Theme" parent="Theme.Material3.Light">
        <item name="colorPrimary">@color/imperiya_color_primary</item>
        <item name="colorOnPrimary">@color/imperiya_body</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/imperiya_color_secondary</item>
        <item name="colorOnSecondary">@color/imperiya_body</item>
        <item name="android:statusBarColor">@color/imperiya_color_background</item>
        <item name="android:windowBackground">@color/imperiya_color_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Imperiya.Theme.BottomNavigation">
        <item name="colorPrimary">@color/imperiya_color_icon</item>
        <item name="colorOnSurface">@color/imperiya_color_icon_disable</item>
    </style>

    <style name="Imperiya.Theme.Collapse">
        <item name="colorPrimary">@color/imperiya_color_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Imperiya.Theme.CollapseToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:statusBarColor">@color/imperiya_color_primary</item>
    </style>

    <style name="Imperiya.Style"/>

    <style name="Imperiya.Style.BottomNavigation">
        <item name="theme">@style/Imperiya.Theme.BottomNavigation</item>
        <item name="backgroundTint">@color/imperiya_color_background_tertiary</item>
    </style>
</resources>