<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    tools:theme="@style/Imperiya.Theme">

    <com.vlv.imperiya.ui.search.ImperiyaSearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        style="@style/Imperiya.Style.SearchView"
        app:queryHint="Search for..."
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/search">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:clipToPadding="true"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:singleSelection="true"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/movie_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:tag="movie"
                    style="@style/Imperiya.Widget.Chip"
                    android:text="Movie" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/series_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:tag="series"
                    style="@style/Imperiya.Widget.Chip"
                    android:text="Tv Show" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/person_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:tag="person"
                    style="@style/Imperiya.Widget.Chip"
                    android:text="Person" />

            </com.google.android.material.chip.ChipGroup>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/items"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/filter"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.vlv.imperiya.ui.warning.WarningView
                android:id="@+id/warning_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/filter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:warning_title="@string/common_error_title"
                app:warning_body="@string/common_error_description"
                app:warning_button_try_again="@string/common_error_button"/>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/loading"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/filter"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>