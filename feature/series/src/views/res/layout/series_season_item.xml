<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="8dp"
    android:padding="12dp"
    android:background="@drawable/series_background_seasons"
    android:outlineProvider="background">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/poster"
        android:layout_width="72dp"
        android:layout_height="128dp"
        android:outlineProvider="background"
        android:scaleType="centerCrop"
        android:background="@drawable/common_poster_foreground"
        android:foreground="@drawable/common_poster_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/season_title"
        style="@style/Imperiya.Style.Text.Subtitle.Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/poster"
        app:layout_constraintTop_toTopOf="@id/poster"
        tools:text="Season 1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/season_number_of_episodes_and_date"
        style="@style/Imperiya.Style.Text.Paragraph"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/poster"
        app:layout_constraintTop_toBottomOf="@id/season_title"
        tools:text="23 episodes - 1 de jun de 2023" />

</androidx.constraintlayout.widget.ConstraintLayout>