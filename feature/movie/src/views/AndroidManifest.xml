<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <application>

        <activity
            android:theme="@style/Imperiya.Theme"
            android:name=".ui.trendingnow.TrendingNowActivity"
            android:exported="false">
            <intent-filter>
                <action android:name="${applicationId}.MOVIE_TRENDING_NOW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:theme="@style/Imperiya.Theme"
            android:name=".ui.nowplaying.NowPlayingActivity"
            android:exported="false">
            <intent-filter>
                <action android:name="${applicationId}.MOVIE_NOW_PLAYING" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:theme="@style/Imperiya.Theme"
            android:name=".ui.search.SearchMovieActivity" />

        <activity
            android:theme="@style/Imperiya.Theme.Collapse"
            android:name=".ui.detail.MovieDetailActivity"
            android:label=""
            android:exported="false">
            <intent-filter>
                <action android:name="${applicationId}.MOVIE_DETAIL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data  android:name="com.vlv.movie.MovieInitializer"
                android:value="androidx.startup" />
        </provider>

    </application>
</manifest>