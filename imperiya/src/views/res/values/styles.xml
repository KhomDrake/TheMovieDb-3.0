<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TheMovieDb.Style.Shimmer">
        <item name="shimmer_auto_start">true</item>
        <item name="shimmer_base_color">@color/imperiya_color_start_shimmer</item>
        <item name="shimmer_highlight_color">@color/imperiya_color_primary</item>
    </style>

    <style name="TheMovieDb.Style.Shimmer.Item">
        <item name="android:background">@drawable/imperiya_background_shimmer</item>
    </style>

    <style name="TheMovieDb.Style.Shimmer.Item.Rounded">
        <item name="android:background">@drawable/imperiya_background_shimmer_rounded</item>
    </style>

    <style name="TheMovieDb.Style.PageIndicator">
        <item name="spi_dotSize">10dp</item>
        <item name="spi_dotSelectedSize">10dp</item>
        <item name="spi_dotColor">#66FFFFFF</item>
        <item name="spi_dotSelectedColor">#FFFFFF</item>
    </style>

</resources>