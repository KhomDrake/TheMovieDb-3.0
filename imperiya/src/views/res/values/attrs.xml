<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ImperiyaToolbarView">
        <attr name="with_back_icon" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="WarningView">
        <attr name="warning_title" format="string"/>
        <attr name="warning_body" format="string"/>
        <attr name="warning_button_try_again" format="string"/>
        <attr name="warning_status_icon" format="reference"/>
        <attr name="warning_show_close_icon" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SmallWarningView">
        <attr name="small_warning_title" format="string"/>
        <attr name="small_warning_body" format="string"/>
        <attr name="small_warning_button_try_again" format="string"/>
        <attr name="small_warning_with_icon" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="StateView">
        <attr name="state_title" format="string"/>
        <attr name="state_body" format="string"/>
        <attr name="state_icon" format="reference"/>
    </declare-styleable>
</resources>